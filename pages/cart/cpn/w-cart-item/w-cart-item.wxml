<!--pages/cart/cpn/w-cart-item/w-cart-item.wxml-->
<view class="cart-item">
    <view class="item-btn">
        <w-check-icon bindtap='onCheckClick' data-index="{{index}}" selected="{{goods.checked}}"/>
    </view>
    <view class="item-img">
        <image class="img" src="{{goods.imageURL}}" mode="widthFix"/>
    </view>
    <view class="item-info">
        <view class="title">{{goods.title}}</view>
        <view class="desc">{{goods.desc}}</view>
        <view class="price-info">
            <view class="price">ï¿¥{{goods.price}}</view>
            <view class="count">x {{goods.count}}</view>
        </view>
    </view>
</view>
