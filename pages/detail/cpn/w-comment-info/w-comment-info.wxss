/* pages/detail/cpn/w-comment-info/w-comment-info.wxss */
.comment-info {
    color: #777;
    padding: 50rpx 30rpx;
    border-bottom: 12rpx solid #f2f2f2;
  }
  
  .header {
    display: flex;
    justify-content: space-between;
    padding-bottom: 30rpx;
    font-size: 32rpx;
    border-bottom: 1px solid #eee;
  }
  
  .user {
    margin: 30rpx 0;
  }
  
  .user .img {
    width: 84rpx;
    height: 84rpx;
    vertical-align: middle;
    border-radius: 42rpx;
  } 
  
  .user .username {
    vertical-align: middle;
    margin-left: 16rpx;
    font-size: 32rpx;
    color: #666;
  }
  
  .comment {
    font-size: 28rpx;
    text-indent: 1.5em;
    line-height: 1.5;
  }
  
  .other-info {
    display: flex;
    font-size: 24rpx;
    margin-top: 20rpx;
    color: #888;
  }
  
  .other-info .time {
    margin-right: 10rpx;
  }
  
  .picture {
    display: flex;
    justify-content: flex-start;
    margin-top: 20rpx;
  }
  .picture .img {
    max-width: 30%;
    margin-right: 20rpx;
  }